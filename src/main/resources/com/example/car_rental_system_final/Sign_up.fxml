<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.car_rental_system_final.Sign_up_Controller">
   <children>
      <!-- Левая панель регистрации -->
      <VBox layoutX="50" layoutY="100" spacing="15">
         <Label text="Sign Up" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #f68809;" />
         <TextField fx:id="NameField" promptText="Name" style="-fx-border-color: #f68809; -fx-padding: 5px;" />
         <TextField fx:id="SurnameField" promptText="Surname" style="-fx-border-color: #f68809; -fx-padding: 5px;" />
         <TextField fx:id="EmailField" promptText="Email" style="-fx-border-color: #f68809; -fx-padding: 5px;" />
         <TextField fx:id="PhoneField" promptText="Phone number" style="-fx-border-color: #f68809; -fx-padding: 5px;" />
         <TextField fx:id="AddressField" promptText="Address" style="-fx-border-color: #f68809; -fx-padding: 5px;" />
         <DatePicker fx:id="BirthdayPick" promptText="Birthday" style="-fx-border-color: #f68809;" />
         <PasswordField fx:id="PasswordField" promptText="Password" style="-fx-border-color: #f68809; -fx-padding: 5px;" />
         <PasswordField fx:id="ConfirmPassword" promptText="Confirm Password" style="-fx-border-color: #f68809; -fx-padding: 5px;" />
         <Button fx:id="SignUpButton1" text="Sign Up" style="-fx-background-color: #f68809; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold;" onAction="#onClickSignUpButton" />
         <HBox spacing="5">
            <Label text="Already have an account?" />
            <Hyperlink fx:id="SignIn1" text="Sign In" textFill="#f68809" onAction="#onClickLinkSignIn" />
         </HBox>
         <Label fx:id="CautionLabel" textFill="RED" />
      </VBox>

      <!-- Правая панель с изображением и слоганом -->
      <VBox layoutX="500" layoutY="50" spacing="20" alignment="CENTER">
         <Text text="Rent a Car with GLU" style="-fx-font-size: 28; -fx-fill: white; -fx-font-weight: bold;" wrappingWidth="350" />
         <ImageView fx:id="Car" fitHeight="300" fitWidth="400" preserveRatio="true" />
      </VBox>
   </children>
</AnchorPane>
